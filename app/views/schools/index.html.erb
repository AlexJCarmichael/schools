
<h1>These are the Schools</h1>
<% if signed_in? %>
  <h4><%= link_to "Is there a new school to add?", new_school_path, class: "waves-effect waves-light btn" %></h4>
<% end %>

<% @schools.each do |school| %>
  <p> <%= link_to "#{school.name}", school %> | <%= school.mascot%> | <%= school.address %> </p>
  <% if signed_in? %>
    <%= link_to "Edit", edit_school_path(school), class: "waves-effect waves-light btn" %> <%= link_to "Delete", school_path(school), method: :delete, data: { confirm: "Are you sure you want to delete this school?
          (All students and teachers attached will be lost.)" }, class: "delete btn" %>
  <% end %>
<% end %>

<%content_for :pagination do %>
  <%= paginate @schools %>
<% end %>
