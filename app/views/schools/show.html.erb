
<h2> Here is the info for <%= @school.name %>: </h2>

<h4> <%= @school.name %> | Teachers: <%= @school.teacher_count%> | Enrollees: <%= @school.student_count %> </h4>
<%= link_to "Edit", edit_school_path(@school) %> <%= link_to "Delete", school_path(@school), method: :delete, data: { confirm: "Are you sure you want to delete this school?
      (All students and teachers attached will be lost.)" } %>

  <div class="container">
    <h5>Teachers belonging to <%= @school.name%></h5>
    <% @school.teacher_list.each do |teacher| %>
    <p> <%= link_to "#{teacher.id}", teacher %> | First name: <%= teacher.first_name %> | Last name: <%= teacher.last_name %>
      | Address <%= teacher.address %> | Age: <%= teacher.age %> </p>
    <% end %>
  </div>
