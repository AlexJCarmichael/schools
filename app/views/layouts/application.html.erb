<!DOCTYPE html>
<html>
<head>
  <title>MyCoolSchools</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Schools", schools_path %></li>
      <li><%= link_to "Teachers", teachers_path %></li>
      <li><%= link_to "Students", students_path %></li>
    </ul>
    <ul class="right-hand-side">
      <li><%= link_to "Sign up?", new_user_path %></li>
      <% if signed_in? %>
        <li><%= link_to 'Logout', sign_out_path, method: :DELETE %></li>
      <% else %>
        <li><%= link_to 'Login', sign_in_path %></li>
      <% end %>
    </ul>
  </nav>
  <% if current_user %> Hello <%= current_user.first_name %> <% end %>

<div class="container">
  <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, { class: "flash #{name}" }) %>
  <% end %>
  <%= yield %>
</div>
<%= yield :pagination %>
</body>
</html>
