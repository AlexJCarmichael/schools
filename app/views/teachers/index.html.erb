
<h1>These are the Teahcers!</h1>
<% if signed_in? %>
  <h4><%= link_to "Is there a new teacher to add?", new_teacher_path, class: "waves-effect waves-light btn" %></h4>
<% end %>

<% @teachers.each do |teacher| %>
  <p> <%= link_to "#{teacher.id}", teacher %> | First name: <%= teacher.first_name %> | Last name: <%= teacher.last_name %>
    | Address <%= teacher.address %> | Age: <%= teacher.age %> | Student count: <%= teacher.students.count %></p>
<% end %>

<%content_for :pagination do %>
  <%= paginate @teachers %>
<% end %>
